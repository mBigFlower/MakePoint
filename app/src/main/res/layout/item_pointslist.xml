<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="12dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="12dp"
            android:text="title"
            android:textSize="14sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/paint_purple"/>
    </LinearLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_level2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="level 2"
            android:textColor="@color/paint_blue"
            android:textSize="16sp"
            app:layout_widthPercent="50%" />

        <TextView
            android:id="@+id/item_level1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_level2"
            android:gravity="center"
            android:padding="12dp"
            android:text="level top"
            android:textColor="@color/paint_red"
            android:textSize="16sp"
            app:layout_widthPercent="50%" />

        <TextView
            android:id="@+id/item_level4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_level2"
            android:gravity="center"
            android:padding="12dp"
            android:text="level bottom"
            android:textColor="@color/paint_purple"
            android:textSize="16sp"
            app:layout_widthPercent="50%" />

        <TextView
            android:id="@+id/item_level3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_level2"
            android:layout_toRightOf="@+id/item_level2"
            android:gravity="center"
            android:padding="12dp"
            android:text="level 3"
            android:textColor="@color/paint_oringe"
            android:textSize="16sp"
            app:layout_widthPercent="50%" />

    </android.support.percent.PercentRelativeLayout>
</LinearLayout>
